<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/randomListLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E9D4F8">

    <EditText
        android:id="@+id/choiceETxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="#E9D4F8"
        android:ems="7"
        android:gravity="center_horizontal"
        android:hint="@string/hintrandomize"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="#003366"
        android:textSize="30sp" />


    <Button
        android:id="@+id/addChoiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choiceETxt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/my_button_bg"
        android:text="ADD ITEM" />

    <Button
        android:id="@+id/randomItemBtn"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="@drawable/my_button_bg"
        android:text="RANDOMIZE" />

    <ListView
        android:id="@+id/itemList"
        android:layout_width="wrap_content"
        android:layout_height="366dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/randomItemBtn"
        android:layout_marginTop="21dp" />

</RelativeLayout>

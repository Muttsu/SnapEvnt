<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:paddingBottom="45dp">

    <ImageView
        android:id="@+id/groceryImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:layout_weight="0.06"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/groceryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/groceryImg"
        android:layout_alignTop="@+id/groceryImg"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#0e2f44"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/listCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/groceryTxt"
        android:layout_alignTop="@+id/groceryTxt"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="#892307"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        app:srcCompat="@drawable/rightarrow"
        android:layout_marginBottom="19dp"
        android:layout_alignBottom="@+id/groceryTxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/groceryListLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5DAAB">

    <EditText
        android:id="@+id/notificationETxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="#F5DAAB"
        android:ems="7"
        android:gravity="center_horizontal"
        android:hint="@string/hintnotify"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="#003366"
        android:textSize="30sp" />


    <Button
        android:id="@+id/addNotificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notificationETxt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/my_button_bg"
        android:text="NOTIFY ME" />

    <ListView
        android:id="@+id/notificationsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addNotificationBtn"
        android:layout_marginTop="19dp" />

</RelativeLayout>
